<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.tim.gesturerecognition">


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_gr"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_gr_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GestureRecognition">
        <activity android:name=".Menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Camera"/>
        <activity android:name=".Microphone"/>
        <activity android:name=".TextEdit"/>
        <activity android:name=".Settings"/>
    </application>

</manifest>